{
  if (SHOW_LOGS)   Log.v(TAG,">> setSurfaceTexture " + surfaceTexture);
  if (SHOW_LOGS)   Log.v(TAG,">> new Surface");
  Surface surface=new Surface(surfaceTexture);
  if (SHOW_LOGS)   Log.v(TAG,"<< new Surface");
  mMediaPlayer.setSurface(surface);
  if (SHOW_LOGS)   Log.v(TAG,"<< setSurfaceTexture " + surfaceTexture);
}
