{
  if (SHOW_LOGS)   Logger.v(TAG,">> setSurfaceTexture " + surfaceTexture);
  if (surfaceTexture != null) {
    mSurface=new Surface(surfaceTexture);
    mMediaPlayer.setSurface(mSurface);
  }
 else {
    mMediaPlayer.setSurface(null);
  }
  if (SHOW_LOGS)   Logger.v(TAG,"<< setSurfaceTexture " + surfaceTexture);
}
